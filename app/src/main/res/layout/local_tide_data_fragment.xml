<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:textStyle="bold/'"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10sp"
        android:gravity="left"
        android:text="@string/tides"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:theme="@style/Theme.Base.CustomToolbarStyle"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/progress_bar"/>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45sp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableRow
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/firstTideCol1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/firstTideCol2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:id="@+id/firstTideCol3"/>
            </TableRow>
            <TableRow
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/secondTideCol1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/secondTideCol2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:id="@+id/secondTideCol3"/>
            </TableRow>
            <TableRow
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thirdTideCol">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/thirdTideCol1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/thirdTideCol2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:id="@+id/thirdTideCol3"/>
            </TableRow>
            <TableRow
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/fourthTideCol1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/fourthTideCol2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:id="@+id/fourthTideCol3"/>
            </TableRow>
            <TableRow
                android:layout_width= "match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/fifthTideCol1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="right"
                    android:id="@+id/fifthTideCol2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:id="@+id/fifthTideCol3"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>