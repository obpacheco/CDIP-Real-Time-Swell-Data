<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base.CustomToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/primary_material_light</item>
        <item name="actionOverflowButtonStyle">@style/DotsLightTheme</item>
    </style>

    <style name="DotsLightTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/colorText</item>
        <item name="android:colorBackground">@color/popupBackgroundColor</item>
        <item name="android:itemBackground">@color/popupBackgroundColor</item>
    </style>

</resources>
